{
    "dart.allowTestsOutsideTestFolder": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.dart_tool": true,
        "**/.metadata": true,
        "**/*.freezed.dart": true,
    },
    "cSpell.ignoreRegExpList": [
        "[０-９Ａ-Ｚａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+"
    ],
    "cSpell.ignorePaths": [
        ".vscode-insiders",
        ".vscode",
        "*.code-workspace",
        "**/.git/objects/**",
        "**/.pub-cache/**",
        "**/.symlinks/**",
        "**/*.freezed.dart",
        "**/*.g.dart",
        "**/example/**",
        "**/flutter/**",
        "**/node_modules/**",
        "**/package-lock.json",
        "**/Pods/**",
        "**/vscode-extension/**",
    ],
    "cSpell.enabledLanguageIds": [
        "dart",
        "json",
        "yaml",
        "gradle",
        "kts",
        "md",
        "csv",
    ],
    "cSpell.diagnosticLevel": "Error",
    "cSpell.enabled": true,
}